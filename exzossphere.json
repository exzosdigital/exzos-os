{
  "name": "ExzosSphere",
  "version": "1.0.0", 
  "description": "üåå ExzosSphere - SaaS Development Framework & Boilerplate",
  "type": "development-framework",
  "purpose": "Boilerplate for creating new SaaS modules with ExzosStack",
  "architecture": {
    "os": "ExzosOS (CasaOS - Base Operating System)",
    "hub": "ExzosVerce - Main Interface/Hub",
    "framework": "ExzosSphere (Development Boilerplate)",
    "theme": "cosmic",
    "relationship": "ExzosSphere provides templates for new modules that run in ExzosOS and are managed via ExzosVerce"
  },
  "modules": {
    "core": {
      "name": "ExzosCore",
      "type": "infrastructure",
      "path": "infrastructure/exzoscore",
      "description": "‚òÄÔ∏è Infrastructure & Container Management",
      "services": [
        "docker",
        "kubernetes",
        "monitoring",
        "logging"
      ]
    },
    "verse": {
      "name": "ExzosVerse",
      "type": "ai-platform",
      "path": "packages/exzosverse",
      "description": "ü™ê Multi-tenant AI Platform",
      "services": [
        "ai-api",
        "tenant-management",
        "database",
        "authentication"
      ]
    },
    "nexus": {
      "name": "ExzosNexus",
      "type": "mcp-server",
      "path": "packages/exzosnexus",
      "description": "üõ∞Ô∏è Model Context Protocol Server",
      "services": [
        "mcp-server",
        "context-management",
        "model-integration"
      ]
    },
    "comet": {
      "name": "ExzosComet",
      "type": "job-engine",
      "path": "packages/exzoscomet",
      "description": "‚òÑÔ∏è Job Processing Engine",
      "services": [
        "job-scheduler",
        "queue-management",
        "worker-processes",
        "cron-jobs"
      ]
    },
    "pulsar": {
      "name": "ExzosPulsar",
      "type": "notification-system",
      "path": "packages/exzospulsar",
      "description": "üì° Multi-channel Notification System",
      "services": [
        "email-service",
        "sms-service",
        "push-notifications",
        "webhook-service"
      ]
    },
    "cluster": {
      "name": "ExzosCluster",
      "type": "projects-collection",
      "path": "packages/exzoscluster",
      "description": "‚≠ê Collection of Integrated Projects",
      "services": [
        "midday-hub",
        "trigger-integrations",
        "novu-extensions"
      ]
    },
    "aura": {
      "name": "ExzosAura",
      "type": "brand-assets",
      "path": "assets/exzosaura",
      "description": "üå† Brand Assets & Design System",
      "services": [
        "design-tokens",
        "logo-assets",
        "theme-manager"
      ]
    },
    "space": {
      "name": "ExzosSpace",
      "type": "documentation",
      "path": "docs/exzosspace",
      "description": "üìö Documentation & Knowledge Base",
      "services": [
        "docs-site",
        "api-documentation",
        "tutorials"
      ]
    }
  },
  "integrations": {
    "exzosos": {
      "enabled": true,
      "type": "CasaOS",
      "mode": "headless",
      "description": "Base operating system for container management",
      "customization": {
        "branding": "ExzosAura",
        "theme": "cosmic-dark"
      }
    },
    "exzosverce": {
      "enabled": true,
      "type": "Central Hub",
      "description": "Main interface/dashboard for managing all modules with ExzosDigital branding",
      "customization": {
        "branding": "exzos-cosmic",
        "name": "ExzosVerce",
        "theme": "dark-cosmic",
        "vision": "Unified ecosystem management with cosmic design"
      }
    },
    "boilerplates": {
      "enabled": true,
      "type": "Development Templates",
      "description": "Ready-to-use templates for creating new SaaS modules",
      "templates": [
        "nextjs-saas",
        "nestjs-api", 
        "react-dashboard",
        "notification-service",
        "ai-microservice",
        "job-processor"
      ]
    },
    "cloud": {
      "gcp": {
        "project": "exzosverce",
        "region": "us-central1",
        "vm": "exzos-hub-vm"
      },
      "railway": {
        "enabled": true,
        "services": ["database", "cache", "api"]
      },
      "vercel": {
        "enabled": true,
        "services": ["frontend", "edge-functions"]
      }
    },
    "ai": {
      "vertex-ai": {
        "enabled": true,
        "models": ["gemini", "palm", "custom"]
      },
      "agents": {
        "devops": "ExzosCore/agents/devops",
        "marketing": "ExzosVerse/agents/marketing", 
        "sdr": "ExzosPulsar/agents/sdr"
      }
    }
  },
  "networking": {
    "ports": {
      "ExzosVerse": 3000,
      "ExzosNexus": 3001,
      "ExzosComet": 3002,
      "ExzosPulsar": 3003,
      "ExzosCluster": 3004,
      "ExzosCore": [8080, 8081, 8082],
      "ExzosSphere": 80
    },
    "domains": {
      "main": "exzos.local",
      "api": "api.exzos.local",
      "docs": "docs.exzos.local"
    }
  },
  "startup": {
    "order": [
      "ExzosCore",
      "ExzosVerse", 
      "ExzosNexus",
      "ExzosComet",
      "ExzosPulsar",
      "ExzosCluster",
      "ExzosSphere"
    ],
    "healthchecks": true,
    "autostart": true
  }
}